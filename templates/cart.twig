<div class="container">
    <h1>Корзина</h1>
</div>
<div class="container">
    {% if cart|length > 0 %}
        {% for product in cart %}
            <div id="product_id-{{ product.product_id }}"
                 data-count="{{ product.count }}"
                 data-price="{{ product.price }}"
            >
                <img src="/images/products/previews/{{ product.image }}"
                     alt="$product"
                     style="width: 300px"
                >
                <div>
                    {{ product.name }}
                </div>
                <div>
                    {{ product.price }} p. *
                    <span>
						<button class="del"
                                data-id="{{ product.product_id }}"
                        >
							-
						</button>
					</span>
                    <span id="prod-count">
						{{ product.count }}
					</span>
                    <span>
						<button class="add"
                                data-id="{{ product.product_id }}"
                        >
							+
						</button>
					</span>
					<span id="prod-sum">
						{{ product.price * product.count }} p.
					</span>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
