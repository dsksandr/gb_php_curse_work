<div class="container">
    {% if orders|length > 0 %}
        <table>
            <tr>
                <th>Номер заказа</th>
                <th>Email</th>
                <th>Статус</th>
            </tr>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.email }}</td>
                    <td>
                        <form>
                            {% for status in statuses %}
                                <label>
                                    {{ status.type }}
                                    <input type="radio"
                                           name="{{ order.id }}"
                                           value="{{ status.id }}"
                                            {% if order.status == status.id %}
                                                checked
                                            {% endif %}
                                            class="change_status"
                                    >
                                </label>
                            {% endfor %}
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
</div>